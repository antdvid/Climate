#directory of excutable
DIR="/home/zgao/FronTier++_climate/climate"
echo $DIR

module load intel
module load openmpi

#run options
echo input file $DIR/in-$prob
echo output directory $DIR/out-$prob
mpirun -np 8 --bind-to-core --bysocket $DIR/climate -d 3 -p 2 2 2 -i $DIR/in-$prob -o $DIR/out-$prob -log_summary
